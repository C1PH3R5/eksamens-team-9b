<Page x:Class="nida.tools_team_9b.View.Menu.AdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:nida.tools_team_9b.View.Menu"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="200"
      Title="AdminMenu">

    <Grid x:Name="AdminMenuGrid" Background="{StaticResource ClrMenuBackground}">
        <StackPanel Height="15" VerticalAlignment="Top" Margin="0,0,0,0">
            
        </StackPanel>
        <StackPanel x:Name="LogoHeader"  Height="85" VerticalAlignment="Top" Margin="0,15,0,0" Background="{StaticResource ClrLogoBackground}">
            <Image Width="190" Source="/Resources/image/HvidLogo.png" Margin="0,28,0,0"/>
            
         </StackPanel>
        <Button  Name="Tjek_ind_ud" VerticalAlignment="Top" Margin="0,100,0,0" Height="80" Width="auto" Background="{StaticResource ClrMenuBackground}" Padding="0,-33,0,0" Click="Button_Click">
            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Padding="0,33,0,0" FontSize="15" FontFamily="Microsoft sans Serif" Margin="0,0,0,0" FontWeight="Heavy" Foreground="{StaticResource ClrGridBackground}">
                <Image Width="20" HorizontalAlignment="Left" Height="auto" Source="/Resources/Icon/RubberStam.ico" Margin="10,0,9,-4"/>
                Stempel Ind/Ud

            </TextBlock>
        </Button>
        <Button Name="MødtMedarbejder" VerticalAlignment="Top" Margin="0,180,0,0" Height="80" Width="auto" Background="{StaticResource ClrMenuBackground}" Padding="0,-33,0,0" Click="Button_Click">
            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Padding="0,33,0,0" FontSize="15" FontFamily="Microsoft sans Serif" Margin="0,0,0,0" FontWeight="Heavy" Foreground="{StaticResource ClrGridBackground}">
                <Image Width="20" HorizontalAlignment="Left" Height="auto" Source="/Resources/Icon/Employee.ico" Margin="10,0,9,-4"/>
                Medarbejdere

            </TextBlock>
        </Button>

        <Button Name="TimeBank"  VerticalAlignment="Top" Margin="0,340,0,0" Height="80" Width="auto" Background="{StaticResource ClrMenuBackground}" Padding="0,-33,0,0" Click="Button_Click">
            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Padding="0,33,0,0" FontSize="15" FontFamily="Microsoft sans Serif" Margin="0,0,0,0" FontWeight="Heavy" Foreground="{StaticResource ClrGridBackground}">
                <Image Width="20" HorizontalAlignment="Left" Height="auto" Source="/Resources/Icon/date.ico" Margin="10,0,9,-4"/>
                Tjek arbejdstider

            </TextBlock>
        </Button>
        <Button Name="teamList"  VerticalAlignment="Top" Margin="0,260,0,0" Height="80" Width="auto" Background="{StaticResource ClrMenuBackground}" Padding="0,-33,0,0" Click="Button_Click">
            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Padding="0,33,0,0" FontSize="15" FontFamily="Microsoft sans Serif" Margin="0,0,0,0" FontWeight="Heavy" Foreground="{StaticResource ClrGridBackground}">
                <Image Width="20" HorizontalAlignment="Left" Height="auto" Source="/Resources/Icon/user-group.ico" Margin="10,0,9,-4"/>
                Teams

            </TextBlock>
        </Button>
        <Button  Name="LogUd" VerticalAlignment="bottom" Margin="0,0,0,0" Height="80" Width="auto" Background="{StaticResource ClrMenuBackground}" Padding="0,-33,0,0" Click="Button_Click">
            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Padding="0,33,0,0" FontSize="15" FontFamily="Microsoft sans Serif" Margin="0,0,0,0" FontWeight="Heavy" Foreground="{StaticResource ClrGridBackground}">
                <Image Width="20" HorizontalAlignment="Left" Height="auto" Source="/Resources/Icon/logout.ico" Margin="10,0,9,-4"/>
                Log ud

            </TextBlock>
        </Button>

    </Grid>
</Page>
